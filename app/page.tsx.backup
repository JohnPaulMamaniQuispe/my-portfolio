              <span className="bg-gradient-to-r from-cyan-400 via-purple-400 to-pink-400 bg-clip-text text-transparent">{PERSONAL_INFO.name}</span>
              <span className="text-cyan-400 drop-shadow-[0_0_10px_rgba(0,255,255,0.8)]">/&gt;</span>
            </div>
            <p className="text-cyan-400/70 mb-6 font-mono text-sm">{PERSONAL_INFO.title}</p>
            <div className="flex justify-center space-x-6 mb-6">
              {[
                { href: PERSONAL_INFO.github, icon: Github },
                { href: PERSONAL_INFO.linkedin, icon: Linkedin },
                { href: `mailto:${PERSONAL_INFO.email}`, icon: Mail }
              ].map(({ href, icon: Icon }, index) => (
                <a
                  key={index}
                  href={href}
                  className="text-cyan-400/70 hover:text-cyan-400 transition-all duration-300 transform hover:scale-110 hover:drop-shadow-[0_0_10px_currentColor]"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <Icon size={24} />
                </a>
              ))}
            </div>
          </div>
          <div className="border-t-2 border-cyan-500/30 pt-8">
            <p className="text-cyan-400/70 font-mono text-sm">
              <span className="text-cyan-400">&gt;_</span> ¬© 2025 {PERSONAL_INFO.name}. {t.footer.rights}
            </p>
            <p className="text-cyan-400/50 text-xs mt-2 font-mono">
              [ {t.footer.built} ]
            </p>
          </div>
        </div>
      </footer>
    </div>
  );
}